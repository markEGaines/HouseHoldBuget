@{
    ViewBag.Title = "Dashboard";
}
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css">
@*<div id="content-header">
        <h1>Dashboard</h1>
    </div>
    <div id="content-container">*@
<div class="row">

    <div class="col-md-3">
        <div class="portlet">
            <div class="portlet-header">
                <h3>
                    <i class="fa fa-money"></i>
                    Accounts / Balances
                </h3>
            </div> <!-- /.portlet-header -->
            <div class="portlet-content">
                @Html.Action("DashboardBankAccounts")
            </div> <!-- /.portlet-content -->
        </div> <!-- /.portlet -->

        <div class="portlet">
            <div class="portlet-header">
                <h3>Recent Transactions</h3>
            </div>
            <div class="portlet-content">

            </div>
        </div>
        <div class="portlet">
            <div class="portlet-header">
                <h3>
                    <i class="fa fa-bar-chart-o"></i>
                    Spending
                </h3>
            </div> <!-- /.portlet-header -->
            <div class="portlet-content">
                <div id="donut-chart" class="chart-holder" style="height: 250px"></div>
            </div> <!-- /.portlet-content -->

        </div>
    </div>

    <div class="col-md-9 align-right">
        <div class="portlet">
            <div class="portlet-header">
                <h3>Budget</h3>
            </div>
            <div class="portlet-content">
                <div id="bar-chart" class="chart-holder" style="height:550px"></div>
            </div>
        </div>
    </div>




</div>

@section Scripts {

    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="http://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>


    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/js/plugins/icheck/jquery.icheck.min.js"></script>
    <script src="~/js/plugins/select2/select2.js"></script>
    <script src="~/js/plugins/tableCheckable/jquery.tableCheckable.js"></script>

    <script src="~/js/App.js"></script>

    <script src="~/js/libs/raphael-2.1.2.min.js"></script>
    <script src="~/js/plugins/morris/morris.min.js"></script>

    <script src="~/js/demos/charts/morris/donut.js"></script>
    <script src="~/js/demos/charts/morris/bar.js"></script>

    <script src="~/js/plugins/sparkline/jquery.sparkline.min.js"></script>

    <script src="~/js/plugins/fullcalendar/fullcalendar.min.js"></script>
    <script src="~/js/demos/calendar.js"></script>

    <script src="~/js/demos/dashboard.js"></script>

<script>
    $('#menu_Dashboard').addClass('active');
    $('#menu_YourHousehold').removeClass('active');
    $('#menu_Accounts').removeClass('active');
    $('#menu_Transactions').removeClass('active');
    $('#menu_BudgetItems').removeClass('active');
</script>

}
