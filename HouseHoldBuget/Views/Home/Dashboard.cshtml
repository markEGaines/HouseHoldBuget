@model HouseHoldBuget.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard";
}
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css">
@*<div id="content-header">
        <h1>Dashboard</h1>
    </div>
    <div id="content-container">*@
<div class="row">

    <div class="col-md-3">
        <div class="portlet">
            <div class="portlet-header">
                <h3>
                    <i class="fa fa-money"></i>
                    Accounts / Balances
                </h3>
            </div> <!-- /.portlet-header -->
            <div class="portlet-content">
                <div class="table-responsive">
                    <table id="accts" style="cursor: pointer" class="display text-nowrap" cellspacing="0" width="100">
                        <thead style="display:none;">
                            <tr>
                                <th></th>
                                <th></th>
                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.bankInfo)
                            {
                                <tr id="@item.BankAccountId" class="account-link">
                                    <td>@item.BankAccountName</td>
                                    <td align="right">@item.BankAccountBalance</td>
                                    @*<td>@Html.ActionLink("E", "Index", "Transactions", new { accountId = item.BankAccountId }, null)</td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div> <!-- /.portlet-content -->
            </div> <!-- /.portlet -->
        </div>
        <div class="portlet">
            <div class="portlet-header">
                <h3>Recent Transactions</h3>
            </div>
            <div class="portlet-content">
                <div class="table-responsive">
                    <table id="trans" class="display text-nowrap" cellspacing="0" width="100">
                        <thead style="display:none;">
                            <tr>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.recentTransInfo)
                            {
                                <tr>
                                    <td>
                                        <p style="margin:0 0 0" >
                                            @Html.DisplayFor(modelitem => item.date) &nbsp;-&nbsp; @item.BankAccount.Name
                                        </p>
                                        <p style="margin:0 0 0" >
                                            @item.Desc &nbsp;-&nbsp; @item.Amt
                                        </p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="portlet">
            <div class="portlet-header">
                <h3>
                    <i class="fa fa-bar-chart-o"></i>
                    Spending
                </h3>
            </div> <!-- /.portlet-header -->
            <div class="portlet-content">
                <div id="donut-chart" class="chart-holder" style="height: 250px"></div>
            </div> <!-- /.portlet-content -->
        </div>
    </div>

    <div class="col-md-9 align-right">
        <div class="portlet">
            <div class="portlet-header">
                <h3>Budget </h3>
                <div class="col-md-offset-1" style="position:absolute; top:15%;">
                    <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-sm btn-default barOpt active">
                            <input type="radio" name="barOpt" value="barOpt1" checked> Current Month
                        </label>
                        <label class="btn btn-sm btn-default barOpt">
                            <input type="radio" name="barOpt" value="barOpt2"> Last Month
                        </label>
                        <label class="btn btn-sm btn-default barOpt ">
                            <input type="radio" name="barOpt" value="barOpt3"> Year to Date
                        </label>
                    </div>
                </div>
            </div>
            <div class="portlet-content">
                <div class="loading" id="barLoader">
                    <i class="fa fa-4x fa-spinner fa-spin"></i>
                </div>
                <div id="bar-chart" class="chart-holder" style="height:503px">

                </div>
            </div>
        </div>
    </div>
    <a id="linkbox"></a>

</div>

