@model HouseHoldBuget.Models.Transaction


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.BankAccountId)

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <strong class="control-label col-md-3">Date</strong>
            <div class="col-md-9">
                @*<input type="datetime" class="form-control" id="tdate" value="@Model.date" />*@
                @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control", id = "tdate" } })
                @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <strong class="control-label col-md-3">Description</strong>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Desc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Desc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
                <strong class="control-label col-md-3">Category</strong>
                <div class="col-md-9">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>
        @*<div class="form-group ui-widget">
            @Html.LabelFor(model => model.CategoryId, "CategoryId", htmlAttributes: new { @class = "control-label col-md-3 ui-autocomplete-input" })
            <div class="col-md-9">
                <input type="text" id="CategoryId" autocomplete="on" />
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <strong class="control-label col-md-3">Amt</strong>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Amt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <strong class="control-label col-md-3">Reconcile Amt</strong>
            <div class="col-md-9">
                @Html.EditorFor(model => model.ReconAmt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ReconAmt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Save" class="btn btn-default" /> | 
    @Html.ActionLink("Cancel", "Index", new { accountId = Model.BankAccountId })
            </div>
        </div>
    </div>
}




