
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - House Hold Budgeter</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,800italic,400,600,800" type="text/css">
</head>
<body style="padding-top:0px;">
    <div id="wrapper">
        <a href="./Index">
            <img src="/Home/img/logos/logo.png" alt="Site Logo" />
        </a>

        <nav id="top-bar" class="collapse top-bar-collapse">

            <ul class="nav navbar-nav pull-left">
                <li class="">
                    <a href="/Home/Index">
                        <i class="fa fa-home"></i>
                        Home
                    </a>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </nav> <!-- /#top-bar -->
        @if (this.User.Identity.IsAuthenticated)
        {
            <div id="sidebar-wrapper" class="collapse sidebar-collapse">
                <nav id="sidebar">
                    <ul id="main-nav" class="open-active">
                        <li id="menu_Dashboard" class="">
                            <a href="/Home/Dashboard">
                                <i class="fa fa-dashboard"></i>
                                Dashboard
                            </a>
                        </li>
                        <li id="menu_YourHousehold" class="">
                            <a href="/Home/Households">
                                <i class="fa fa-list-alt"></i>
                                Household Manager
                            </a>
                        </li>
                        <li id="menu_Accounts" class="">
                            <a href="/BankAccounts/Index">
                                <i class="fa fa-list-alt"></i>
                                Accounts
                            </a>
                        </li>
                        <li id="menu_Transactions" class="">
                            <a href="/Accounts">
                                <i class="fa fa-list-alt"></i>
                                Transactions
                            </a>
                        </li>
                        <li id="menu_BudgetItems" class="">
                            <a href="/BudgetItems/Index">
                                <i class="fa fa-list-alt"></i>
                                Budget Items
                            </a>
                        </li>
                    </ul>
                </nav> <!-- #sidebar -->
            </div> <!-- /#sidebar-wrapper -->
        }
        <div id="content">
            @*<div id="content-header">
                    <h1>@ViewBag.Title</h1>
                    </div>
                <div id="content-container">*@


            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Budget Builder</p>
            </footer>
        </div>
    </div>
    @*</div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>